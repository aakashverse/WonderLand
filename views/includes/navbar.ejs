<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
    white-space: nowrap;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    width: 200px;
  }

  @media (max-width: 768px) {
    .mobile-header {
      display: flex;
      justify-content: space-between;
      width: 100%;
      align-items: center;
    }
    .navbar-content {
      flex-direction: column;
      align-items: flex-end;
      padding-top: 0.5rem;
    }
    .nav-links {
      background: rgb(217, 210, 210);
      padding: 1rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      text-align: right;
      width: auto;
      min-width: 200px;
    }
    .search-inp {
      margin-left: 10px;
      width: 190px;
    }
    .navbar-toggler {
      margin-left: auto;
      order: 2;
    }
    .navbar-brand {
      order: 1;
    }
    .search-container {
      order: 3;
    }
  }

  @media (min-width: 769px) {
    .search-container {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
    }
    .nav-links {
      white-space: nowrap; /* Prevent text wrapping */
      margin-left: auto;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid position-relative">
    <!-- Mobile Header Row -->
    <div class="mobile-header d-md-none">
      <a class="navbar-brand" href="/listings">
        <i class="fa-solid fa-compass me-2"></i>
        <span class="fs-4 fw-bold">Wonderland</span>
      </a>
      
      <div class="d-flex align-items-center">
        <div class="search-container me-2">
          <input class="form-control search-inp" type="search" placeholder="Search destinations..">
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </div>

    <!-- Desktop Header -->
    <div class="d-none d-md-flex w-100">
      <a class="navbar-brand" href="/listings">
        <i class="fa-solid fa-compass me-2"></i>
        <span class="fs-4 fw-bold">Wonderland</span>
      </a>

      <div class="search-container">
        <form class="d-flex" role="search">
          <input class="form-control search-inp" type="search" placeholder="Search destinations...">
          <button class="btn search-btn ms-2" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form>
      </div>
    </div>

    <!-- Collapsible Content (right-aligned) -->
    <div class="collapse navbar-collapse navbar-content" id="navbarContent">
      <div class="nav-links d-flex flex-column flex-md-row gap-5 ms-md-auto">
        <a class="nav-link" href="/listings">Explore</a>
        <a class="nav-link" href="/listings/new">Add Listing</a>
        
        <% if (!curUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if (curUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  // Add this after your navbar code
document.addEventListener('DOMContentLoaded', function() {
    const navbar = document.querySelector('.navbar.fixed-top');
    if (navbar) {
        document.body.classList.add('has-fixed-navbar');
        const navbarHeight = navbar.offsetHeight;
        document.documentElement.style.setProperty('--navbar-height', `${navbarHeight}px`);
    }
});
</script>



